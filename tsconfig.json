{
  "compilerOptions": {
    "paths": {
      "src/*": [
        "./src/*"
      ],
    },
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/global.d.ts"
  ],
}
